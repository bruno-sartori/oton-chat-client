{
  "name": "oton-chat-client",
  "version": "0.0.1",
  "description": "Chat React components",
  "main": "build/bundle.js",
  "authors": {
    "name": "Bruno Sartori",
    "email": "bruno.sartori@agilecontent.com"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production ./node_modules/.bin/webpack --mode production",
    "build:components": "cross-env NODE_ENV=production babel src --out-dir dist --copy-files --ignore spec.js,test.js",
    "start": "./node_modules/.bin/webpack -w --mode development",
    "serve": "serve",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "precommit": "npm run lint-staged && npm run build",
    "lint:style": "stylelint 'src/**/*.less' --syntax less",
    "lint:prettier": "check-prettier lint",
    "lint": "eslint --ext .js src && npm run lint:style && npm run lint:prettier",
    "lint:fix": "eslint --fix --ext .js src && stylelint --fix 'src/**/*.less' --syntax less",
    "lint-staged": "lint-staged",
    "lint-staged:js": "eslint --ext .js",
    "prettier": "node ./scripts/prettier.js",
    "depcheck": "./node_modules/.bin/depcheck"
  },
  "repository": "/oton-chat-client",
  "license": "MIT",
  "peerDependencies": {
    "react": "16.x"
  },
  "dependencies": {
    "@babel/plugin-proposal-decorators": "^7.7.4",
    "@storybook/react": "^5.2.6",
    "antd": "^3.25.3",
    "aphrodite": "^2.4.0",
    "axios": "^0.19.2",
    "babel-plugin-add-module-exports": "^1.0.2",
    "babel-preset-react-app": "^9.1.1",
    "chalk": "^3.0.0",
    "cross-env": "^6.0.3",
    "dva": "^2.4.1",
    "emoji-js": "^3.5.0",
    "glob": "^7.1.6",
    "jquery": "^3.4.1",
    "lodash": "^4.17.15",
    "prettier": "^1.16.4",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-chat-window": "^1.2.1",
    "react-dom": "^16.12.0",
    "react-linkify": "^1.0.0-alpha",
    "react-slick": "^0.25.2",
    "slick-carousel": "^1.8.1",
    "socket.io-client": "^2.3.0",
    "sweetalert2": "^9.3.16",
    "url-loader": "^3.0.0",
    "webpack": "4",
    "xml-js": "^1.6.11"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.7.2",
    "@babel/plugin-proposal-class-properties": "^7.7.0",
    "@babel/preset-env": "^7.7.1",
    "@babel/preset-react": "^7.7.0",
    "@emotion/core": "^10.0.22",
    "@storybook/addon-actions": "^5.2.6",
    "@storybook/addon-info": "5.2.0-alpha.30",
    "@storybook/addon-links": "^5.2.6",
    "@storybook/addon-options": "^5.2.6",
    "@storybook/addons": "^5.2.6",
    "@storybook/theming": "^5.2.6",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.6",
    "check-prettier": "^1.0.1",
    "css-loader": "^3.2.0",
    "depcheck": "^0.9.1",
    "eslint": "^6.6.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-compat": "^2.6.3",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.0",
    "eslint-plugin-markdown": "^1.0.0",
    "eslint-plugin-react": "^7.12.4",
    "file-loader": "^4.2.0",
    "husky": "^3.1.0",
    "less": "^3.10.3",
    "less-loader": "^5.0.0",
    "lint-staged": "^8.1.1",
    "postcss-loader": "3",
    "raw-loader": "3",
    "style-loader": "1",
    "stylelint": "^9.10.1",
    "stylelint-config-css-modules": "^1.3.0",
    "stylelint-config-prettier": "^5.0.0",
    "stylelint-config-rational-order": "^0.0.4",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-declaration-block-no-ignored-properties": "^1.1.0",
    "stylelint-order": "^2.0.0",
    "webpack-cli": "3"
  },
  "lint-staged": {
    "**/*.{js,ts,tsx,json,jsx,less}": [
      "node ./scripts/lint-prettier.js",
      "git add"
    ],
    "**/*.{js,jsx}": "npm run lint-staged:js",
    "**/*.less": "stylelint --syntax less"
  },
  "checkFiles": [
    "src/**/*.js*",
    "src/**/*.less",
    "scripts/**/*.js"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-staged"
    }
  }
}
